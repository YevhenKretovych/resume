<main class="p-5">
    <div class="row">

        <section class="col-12">
            <div class="card">
                {{#with navigation}}
                <ul class="nav">
                    {{#each links}}
                    <li class="nav-item">
                        <a href="{{href}}" class="nav-link">{{text}}</a>
                    </li>
                    {{/each}}
                    <li class="nav-item">
                        <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
                {{/with}}
            </div>

            <div class="card">
                {{#with header}}
                <div class="card-header py-5">
                    <div>
                        <h1>{{title}}</h1>
                    </div>
                    <div>
                        {{#with button}}
                        <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>
        </section>

        <section class="col-12">
            <div class="card py-5">
                {{#each goodsBlock}}
                {{> cartGoodsItem}}
                {{/each}}
            </div>

            <div class="card py-5">
                {{#with total}}
                <div>
                    <h2>{{title}}</h2>
                </div>
                <div class="display-6">{{amount}}</div>
                <p>{{delivery}}</p>

                {{#each buttons}}
                <div class="mt-3">
                    <a href="link"
                        class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isOutline}}btn-outline-success{{/if}}">{{text}}</a>
                </div>
                {{/each}}
                {{/with}}
            </div>

            <div class="card py-5">
                {{#with goodsOtherBlock}}
                <div class="text-center my-2">
                    <h2>{{title}}</h2>
                </div>

                <div class="row g-2">
                    {{#each cards}}
                    <div class="col-4">
                        <div class="card">
                            <img src="{{image}}" alt="{{title}}" class="card-img-top">
                            <div>
                                <h3>{{title}}</h3>
                                {{#if isHot}}
                                <span class="badge rounded-pill text-bg-warning text-uppercase">Hot!</span>
                                {{/if}}
                                {{#if idNaw}}
                                <span class="badge rounded-pill text-bg-primary">New</span>
                                {{/if}}
                            </div>
                            <p>{{description}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{/with}}
            </div>

            <div class="card">
                {{#with subscribe}}
                <div class="card-header p-2 text-bg-dark">
                    <div>
                        <h2>{{header}}</h2>
                    </div>
                    <p>{{description}}</p>

                    {{#each buttons}}
                    <div class="mt-3">
                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </section>

        <section class="col-12">
            <div class="card">
                <div class="card-footer">

                    <div class="row">
                        {{#each footer}}
                        <div class="nav col-2">
                            <div class="nav-item">
                                <a href="{{this.[0].link}}" class="btn btn-link nav-link">{{this.[0].text}}</a>
                            </div>
                            <div class="nav-item">
                                <a href="{{this.[1].link}}" class="btn btn-link nav-link">{{this.[1].text}}</a>
                            </div>
                            <div class="nav-item">
                                <a href="{{this.[2].link}}" class="btn btn-link nav-link">{{this.[2].text}}</a>
                            </div>
                            <div class="nav-item">
                                <a href="{{this.[3].link}}" class="btn btn-link nav-link disabled">{{this.[3].text}}</a>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>