<main class="p-5">
    <div class="row">

        <section class="col-12">
            {{#with navigation}}
            <div class="card">
                <ul class="nav">
                    {{#each links}}
                    <li class="nav-item">
                        <a href="{{href}}" class="btn btn-link nav-link">{{text}}</a>
                    </li>
                    {{/each}}
                    <li class="nav-item">
                        <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
            </div>
            {{/with}}

            <div class="card py-5">
                <div class="row g-2">
                    {{#with formBlock}}
                    <div class="col-8">
                        <div class="card">
                            <div class="mb-2">
                                <h1>{{header}}</h1>
                            </div>
                            {{#with rating}}
                            <div>{{title}}: {{value}}</div>
                            {{/with}}

                            {{#with actionBlock}}
                            <ul class="nav nav-tabs my-5">
                                {{#each tabs}}
                                <li class="nav-item">
                                    <div class="nav-link {{#if isActive}}active{{/if}}">{{text}}</div>
                                </li>
                                {{/each}}
                            </ul>

                            <div class="card py-5">
                                {{#with report}}
                                <div class="card-body">
                                    <div class="card-title">{{title}}</div>
                                    {{#with button}}
                                    <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                                    {{/with}}
                                </div>
                                {{/with}}
                            </div>
                            {{/with}}

                            <div class="card">
                                {{#with feedbackBlock}}
                                <div class="my-5">
                                    <h2>{{title}}</h2>
                                </div>

                                <div class="col-12">
                                    {{#each buttons}}
                                    <a href="{{link}}"
                                        class="btn {{#if isWarning}}btn-warning{{/if}} {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}}">{{text}}</a>
                                    {{/each}}
                                </div>
                                {{/with}}
                            </div>
                        </div>
                    </div>

                    <div class="col-4">
                        {{#with goodsInfo}}
                        <div class="card p-2 mb-2">
                            <img src="{{photo}}" alt="{{name}}" width="150px" height="150px">
                            <b class="mt-2">{{name}}</b>
                        </div>

                        <div class="card p-2 mb-2">
                            <b class="mb-2">{{price}}</b>
                            {{#if inMarket}}
                            <div>Є в наявності</div>
                            {{/if}}

                            {{#each buttons}}
                            <div class="mt-2">
                                <a href="{{link}}"
                                    class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-secondary{{/if}}">{{text}}</a>
                            </div>
                            {{/each}}
                        </div>

                        <div class="card p-2">
                            {{#with seller}}
                            <div>{{title}}: <b>{{value}}</b></div>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
            </div>
        </section>

        <section class="col-12 mb-5">
            {{#each reviewList}}
            {{> reviewItem}}
            {{/each}}

            <div class="card text-center text-bg-success p-2">
                {{#with service}}
                <div class="mb-3">
                    <h2>{{title}}</h2>
                </div>
                <p>{{description}}</p>
                {{#each buttons}}
                <div>
                    <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                </div>
                {{/each}}
                {{/with}}
            </div>
        </section>

        <section class="col-12">
            <div class="card">
                <div class="card-footer">
                    <div class="row">
                        {{#each footer}}
                        <div class="nav col-2 me-1">
                            <div class="nav-item">
                                <a href={{this.[0].link}} class="btn btn-link nav-link">{{this.[0].text}}</a>
                            </div>

                            <div class="nav-item">
                                <a href={{this.[1].link}} class="btn btn-link nav-link">{{this.[1].text}}</a>
                            </div>

                            <div class="nav-item">
                                <a href={{this.[2].link}} class="btn btn-link nav-link">{{this.[2].text}}</a>
                            </div>

                            <div class="nav-item">
                                <a href={{this.[3].link}} class="btn btn-link nav-link disabled">{{this.[3].text}}</a>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>