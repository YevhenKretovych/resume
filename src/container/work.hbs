<div>
    {{#with main}}
    <main>
        <section>
            {{> title title="Work history" big=true}}
            <div>
                <ul class="ps-5">
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>

                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (зараз тут працюємо)
                            {{/if}}
                        </div>

                        <div>
                            {{#with company}}
                            {{#if url}}
                            {{> link href=url text=name blank=true noLine=true}}
                            {{else}}
                            <b>{{name}}</b>
                            {{/if}}
                            {{/with}}
                        </div>

                        <div class="my-3">
                            <strong>Projects ({{projectAmount}}):</strong>
                        </div>

                        <ul class="ps-5">
                            {{#each projects}}
                            <li>
                                <div>{{> link href=url text=name blank=true noLine=true}}</div>
                                <div>
                                    <p>{{about}}</p>
                                </div>

                                <div class="my-2">
                                    <em>Project stacks ({{../stackAmount}})</em>
                                </div>

                                <ul class="ps-5">
                                    {{#each stacks}}
                                    <li>{{name}}</li>
                                    {{/each}}
                                </ul>

                                <div class="my-2">
                                    <em>Project awards:</em>
                                </div>

                                <ul class="ps-5">
                                    {{#each awards}}
                                    <li>{{name}}</li>
                                    {{/each}}
                                </ul>
                            </li>
                            {{/each}}
                        </ul>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>