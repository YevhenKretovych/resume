<div class="card my-3 p-1">
    <div class="row">
        <div class="col-2">
            <div class=" card-img-top py-3 my-3">
                <img src="{{image}}" alt="{{name}}">
            </div>
        </div>

        <div class="col-4">
            <div>
                <h2>{{name}}</h2>
            </div>
            <p class="mb-0">{{description}}</p>
        </div>

        <div class="col-2 py-5 my-3">
            {{#with price}}
            <div>{{title}}:</div>
            <div>{{value}}</div>
            {{/with}}
        </div>

        <div class="col-2 py-5 my-4">
            <div>{{amount}}</div>
        </div>

        <div class="col-2 my-4">
            {{#each buttons}}
            <div class="my-3">
                <button
                    class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</button>
            </div>
            {{/each}}
        </div>
    </div>
</div>