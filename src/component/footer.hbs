{{#with footer}}
<footer>

    <hr class="my-5" />

    <div>
        {{#with social}}
        {{> link email blank=true }}
        {{> link phone blank=true }}
        {{> link linkedin blank=true noLine=true}}
        {{/with}}
    </div>

    <div class="my-3">
        <em>Copyright by {{../header.name.firstname}} {{../header.name.lastname}} </em>
    </div>

    <div>
        <address>{{../header.address}}</address>
    </div>
</footer>
{{/with}}